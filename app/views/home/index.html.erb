<div id="front_page_wrap" class="clearfix">
    <div class="front_page">
    </div>
    <div class="thoughts">
        <% @recent_posts.each do |post| %>
          <div>
            <span style="font-size: 20px;color: white;"><%= post.title %></span> <br />
            <span style="font-size: 17px;color: white;"><%= post.content %> </span><br />
            <span style="font-size: 10px;color: white;"> <%= post.user.name.upcase %> <%= post.created_at.strftime("%b. %d, %Y") %></span>
          </div>
        <% end %>
    </div>
</div>








